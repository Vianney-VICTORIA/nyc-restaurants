extends layout

block content 
    div.overlay 
    
    div.background
       img(src="images/background.gif").bg
       
    div.title 
        h1
            p.welcome Bienvenue sur QuickRest  
              
    div.content
      h4
        p The top 10 of our restaurants
      ul
        each data in datas
          a(href='/restaurants/view/#{data._id.restaurant_id}')
            li.li-restaurants
              p.list-restaurants
                =data._id.name 
                p.list-restaurants
                =data._id.cuisine
                  span : 
                  =data.average
                  
